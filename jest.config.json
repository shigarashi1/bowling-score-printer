{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "ts"],
  "transformIgnorePatterns": ["/node_modules/(?!(ramda|date-fns)/)"],
  "transform": {
    "^.+\\.(ts)$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "./tsconfig.json"
    }
  },
  "testMatch": ["**/**.test.ts"]
}
